{% extends "../base.njk" %}

{%- block breadcrumb %}
	<h2 class="small" itemprop="author"><i class="pl2">par</i> {{ site.author.name }}</h2>
{%- endblock %}

{%- block latest %}
	{%- for post in collections.posts.slice(-1) %}
		<div>
			{% if post.data.format -%}
				{% include '../partials/format-' + post.data.format + '.njk' %}
			{%- else -%}
				{% include '../partials/format-standard.njk' %}
			{%- endif -%}
		</div>
	{%- endfor %}
{%- endblock %}
